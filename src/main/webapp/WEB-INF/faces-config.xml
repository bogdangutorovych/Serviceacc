<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>



	<managed-bean>
		<managed-bean-name>clientNew</managed-bean-name>
		<managed-bean-class>ua.com.foxminded.serviceacc.controller.ClientNew</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>isShowNewClientForm</property-name>
			<value>#{isShowNewClientForm}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>clientUpdate</managed-bean-name>
		<managed-bean-class>ua.com.foxminded.serviceacc.controller.ClientUpdate</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>firstName</property-name>
			<value>#{firstName}</value>
		</managed-property>
		<managed-property>
			<property-name>secondName</property-name>
			<value>#{secondName}</value>
		</managed-property>
		<managed-property>
			<property-name>client</property-name>
			<value>#{client}</value>
		</managed-property>
		<managed-property>
			<property-name>isShowUpdateForm</property-name>
			<value>#{isShowUpdateForm}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>clients</managed-bean-name>
		<managed-bean-class>ua.com.foxminded.serviceacc.controller.Clients</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>clientServices</property-name>
			<value>#{clientServices}</value>
		</managed-property>

		<managed-property>
			<property-name>isShowMenuForm</property-name>
			<value>#{isShowMenuForm}</value>
		</managed-property>
		<managed-property>
			<property-name>allClients</property-name>
			<value>#{allClients}</value>
		</managed-property>
		<managed-property>
			<property-name>isBlockTable</property-name>
			<value>#{isBlockTable}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>clientSelected</managed-bean-name>
		<managed-bean-class>ua.com.foxminded.serviceacc.controller.ClientSelected</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>selectedClient</property-name>
			<value>#{selectedClient}</value>
		</managed-property>
		<managed-property>
			<property-name>isShowSelectedClientForm</property-name>
			<value>#{isShowSelectedClientForm}</value>
		</managed-property>
	</managed-bean>

	<navigation-rule>
		<navigation-case>
			<from-outcome>client</from-outcome>
			<to-view-id>/Client/clients.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>


</faces-config>
