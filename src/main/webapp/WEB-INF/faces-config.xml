<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

	<!-- menu -->
	<managed-bean>
		<managed-bean-name>menu</managed-bean-name>
		<managed-bean-class>ua.com.foxminded.serviceacc.controller.menu.Menu</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>clientController</property-name>
			<value>#{clientController}</value>
		</managed-property>
		<managed-property>
			<property-name>clientStatusTypeController</property-name>
			<value>#{clientStatusTypeController}</value>
		</managed-property>
	</managed-bean>

	<!-- CRU client -->
	<managed-bean>
		<managed-bean-name>clientCru</managed-bean-name>
		<managed-bean-class>ua.com.foxminded.serviceacc.controller.client.ClientCru</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>selected</property-name>
			<value>#{selected}</value>
		</managed-property>
		<managed-property>
			<property-name>show</property-name>
			<value>#{show}</value>
		</managed-property>
		<managed-property>
			<property-name>model</property-name>
			<value>#{model}</value>
		</managed-property>		
	</managed-bean>

	<!-- client controller -->
	<managed-bean>
		<managed-bean-name>clientController</managed-bean-name>
		<managed-bean-class>ua.com.foxminded.serviceacc.controller.client.ClientController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>clientList</property-name>
			<value>#{clientList}</value>
		</managed-property>	
		<managed-property>
			<property-name>clientCru</property-name>
			<value>#{clientCru}</value>
		</managed-property>	
	</managed-bean>


	<!-- all client -->
	<managed-bean>
		<managed-bean-name>clientsList</managed-bean-name>
		<managed-bean-class>ua.com.foxminded.serviceacc.controller.client.ClientList</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>		
		<managed-property>
			<property-name>list</property-name>
			<value>#{list}</value>
		</managed-property>
		<managed-property>
			<property-name>clientsListShow</property-name>
			<value>#{clientsListShow}</value>
		</managed-property>
		<managed-property>
			<property-name>clientCru</property-name>
			<value>#{clientCru}</value>
		</managed-property>			
	</managed-bean>



	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>

</faces-config>
